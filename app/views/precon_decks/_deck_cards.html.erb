<% if @grouped_cards.empty? %>
  <div
    class="
      flex flex-col items-center justify-center p-12 border rounded-xl
      bg-foreground border-highlight
    "
  >
    <svg
      class="w-16 h-16 mb-4 text-grey-text"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="1"
        d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
      />
    </svg>

    <h3 class="mb-2 text-lg font-semibold text-white">No cards in this deck</h3>

    <p class="text-grey-text">This preconstructed deck appears to be empty</p>
  </div>
<% else %>
  <div class="p-4 border rounded-xl bg-foreground border-highlight">
    <% if @view_mode == 'card' %>
      <%= render partial: 'deck_cards_visual' %>
    <% else %>
      <%= render partial: 'deck_cards_list' %>
    <% end %>
  </div>
<% end %>
