<table class="min-w-full">
  <thead class="bg-background">
    <tr>
      <th class="px-6 py-3 text-left text-xs font-medium text-grey-text uppercase tracking-wider">Qty</th>
      <th class="px-6 py-3 text-left text-xs font-medium text-grey-text uppercase tracking-wider">Card</th>
      <th class="px-6 py-3 text-left text-xs font-medium text-grey-text uppercase tracking-wider hidden md:table-cell">Type</th>
      <th class="px-6 py-3 text-left text-xs font-medium text-grey-text uppercase tracking-wider hidden lg:table-cell">Mana</th>
      <th class="px-6 py-3 text-right text-xs font-medium text-grey-text uppercase tracking-wider">Price</th>
    </tr>
  </thead>
  <tbody class="divide-y divide-highlight">
    <% cards.each do |pdc| %>
      <% card = pdc.magic_card %>
      <tr class="hover:bg-background/50">
        <td class="px-6 py-3 text-grey-text">
          <%= pdc.quantity %><%= 'x' if pdc.quantity > 1 %>
          <% if pdc.is_foil %>
            <span class="ml-1 text-xs text-yellow-400">Foil</span>
          <% end %>
        </td>
        <td class="px-6 py-3">
          <div class="flex items-center gap-3">
            <% if card.image_small.present? %>
              <img src="<%= card.image_small %>" alt="<%= card.name %>" class="w-8 h-auto rounded" loading="lazy" />
            <% end %>
            <div class="flex flex-col">
              <span class="text-white font-medium"><%= card.name %></span>
              <span class="text-grey-text text-sm md:hidden"><%= card.card_type&.truncate(30) %></span>
            </div>
          </div>
        </td>
        <td class="px-6 py-3 text-grey-text hidden md:table-cell"><%= card.card_type&.truncate(40) %></td>
        <td class="px-6 py-3 text-grey-text hidden lg:table-cell">
          <% if card.mana_cost.present? %>
            <%= card.mana_cost %>
          <% end %>
        </td>
        <td class="px-6 py-3 text-right">
          <% price = pdc.is_foil ? card.foil_price : card.normal_price %>
          <span class="text-white"><%= number_to_currency(price || 0) %></span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
