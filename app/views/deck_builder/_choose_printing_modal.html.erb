<%= turbo_frame_tag "deck_modal" do %>
  <dialog id="choose-printing-dialog"
          class="p-0 border-0 md:border rounded-none md:rounded-lg bg-foreground md:border-highlight backdrop:bg-black/50 fixed top-0 left-0 md:top-1/2 md:left-1/2 md:-translate-x-1/2 md:-translate-y-1/2 m-0 w-full h-full md:w-auto md:h-[90vh] md:max-h-[90vh] overflow-hidden"
          data-controller="modal choose-printing"
          data-action="click->modal#closeOnBackdrop keydown.esc->modal#close">
    <div class="w-full h-full md:w-fit md:max-w-[90vw] p-4 md:p-6 flex flex-col md:max-h-[90vh]" data-modal-target="content">
      <div class="flex items-center justify-between mb-4 shrink-0">
        <h3 class="text-lg font-semibold text-grey-text">Choose Printing - <%= magic_card.name %></h3>
        <button type="button"
                data-action="click->modal#close"
                class="text-grey-text hover:text-nine-white cursor-pointer">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>

      <div class="overflow-y-auto flex-1">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <% printings.each do |printing| %>
            <% is_current = printing.id == magic_card.id %>
            <button type="button"
                    data-action="click->choose-printing#select"
                    data-printing-id="<%= printing.id %>"
                    data-printing-name="<%= printing.name %>"
                    data-printing-image="<%= printing.image_small %>"
                    data-printing-set="<%= printing.boxset&.name %> (<%= printing.boxset&.code&.upcase %>)"
                    class="relative p-3 rounded-lg border <%= is_current ? 'border-2 border-accent-50 bg-background/50 ring-2 ring-accent-50/30' : 'border-highlight bg-background hover:border-accent-50 hover:bg-background/75' %> transition cursor-pointer text-left">
              <% if is_current %>
                <div class="absolute top-4 right-4 z-10">
                  <span class="px-2 py-0.5 text-xs font-medium rounded-full bg-accent-50 text-foreground">
                    Current
                  </span>
                </div>
              <% end %>
              <% if printing.image_large.present? %>
                <img src="<%= printing.image_large %>"
                     alt="<%= printing.name %>"
                     class="w-full h-auto rounded mb-2" />
              <% else %>
                <img src="<%= printing.image_medium %>"
                     alt="<%= printing.name %>"
                     class="w-full h-auto rounded mb-2" />
              <% end %>
              <p class="text-sm font-medium text-grey-text truncate"><%= printing.boxset&.name %></p>
              <p class="text-xs text-grey-text/75"><%= number_to_currency(printing.normal_price) %></p>
            </button>
          <% end %>
        </div>
      </div>

      <div class="flex justify-end pt-4 mt-4 border-t border-highlight shrink-0">
        <button type="button"
                data-action="click->modal#close"
                class="px-4 py-2 text-sm transition border rounded-md border-highlight text-grey-text hover:bg-foreground hover:text-accent-50 hover:border-accent-50 cursor-pointer">
          Cancel
        </button>
      </div>
    </div>
  </dialog>
<% end %>
