<% is_staged = card.staged?
  is_finalized = !card.staged? && !card.needed? %>

<%= turbo_frame_tag "deck_modal" do %>
  <dialog
    id="transfer-card-dialog"
    class="
      p-0 border rounded-lg bg-foreground border-highlight
      backdrop:bg-black/50 fixed top-1/2 left-1/2 -translate-x-1/2
      -translate-y-1/2 m-0
    "
    data-controller="modal"
    data-action="click->modal#closeOnBackdrop keydown.esc->modal#close"
  >
    <div class="w-96 p-6" data-modal-target="content">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-grey-text">Remove from Deck</h3>

        <button
          type="button"
          data-action="click->modal#close"
          class="text-grey-text hover:text-nine-white cursor-pointer"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"
            />
          </svg>
        </button>
      </div>

      <div class="mb-4">
        <div
          class="
            flex items-center gap-3 p-3 border rounded-lg border-highlight
            bg-background
          "
        >
          <% if card.magic_card.image_small.present? %>
            <%= image_tag card.magic_card.image_small,
              alt: card.magic_card.name,
              class: "w-12 h-auto rounded" %>
          <% end %>

          <div>
            <p class="font-medium text-grey-text">
              <%= card.magic_card.name %>
            </p>

            <p class="text-sm text-grey-text/75">
              <%= card.display_quantity %>
              cop<%= card.display_quantity == 1 ? 'y' : 'ies' %>
            </p>
          </div>
        </div>
      </div>

      <% if is_staged %>
        <p class="mb-6 text-grey-text">
          Remove this card from the deck? It will be available again in
          <span class="text-accent-50 font-medium"><%= card.source_collection&.name || 'your collection' %></span>.
        </p>
        <div class="flex justify-end gap-3">
          <button
            type="button"
            data-action="click->modal#close"
            class="
              px-4 py-2 text-sm transition border rounded-md
              border-highlight text-grey-text hover:bg-foreground
              hover:text-accent-50 hover:border-accent-50 cursor-pointer
            "
          >
            Cancel
          </button>

          <%= button_to "Remove from Deck",
              remove_card_deck_builder_path(deck, card_id: card.id),
              method: :delete,
              class: "px-4 py-2 text-sm transition rounded-md bg-red-500 text-grey-text border border-red-500 hover:bg-foreground hover:text-red-500 cursor-pointer",
              data: { turbo_frame: "_top" } %>
        </div>
      <% else %>
        <%= form_with url: transfer_card_deck_builder_path(deck, card_id: card.id), method: :post, class: "space-y-4" do |f| %>
          <div>
            <label class="block text-sm font-medium text-grey-text mb-2">
              Transfer to:
            </label>

            <%= f.select :to_collection_id,
                options_for_select(collections.map { |c| [c.name, c.id] }),
                { prompt: "Select a collection..." },
                class: "w-full rounded-md bg-background border-highlight text-grey-text focus:border-accent-50 focus:ring-accent-50 cursor-pointer" %>
          </div>

          <div class="flex justify-end gap-3 pt-2">
            <button
              type="button"
              data-action="click->modal#close"
              class="
                px-4 py-2 text-sm transition border rounded-md
                border-highlight text-grey-text hover:bg-foreground
                hover:text-accent-100 hover:border-accent-100 cursor-pointer
              "
            >
              Cancel
            </button>

            <%= f.submit "Transfer",
                class: "px-4 py-2 text-sm font-medium transition rounded-md bg-accent-50 text-foreground border border-accent-50 hover:bg-foreground hover:text-accent-50 hover:border-accent-50 cursor-pointer" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </dialog>
<% end %>
