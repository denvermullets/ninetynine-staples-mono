<div class="flex items-center gap-3">
  <% if @is_owner %>
    <% if @deck.in_build_mode? %>
      <%= link_to 'Finalize Deck', confirm_finalize_modal_deck_builder_path(@deck),
          class: 'px-4 py-2 bg-accent-50 text-foreground font-medium rounded-lg border border-accent-50 hover:bg-foreground hover:text-accent-50 transition cursor-pointer',
          data: { turbo_frame: 'deck_modal' } %>
    <% end %>

    <%= link_to 'Edit Info', edit_deck_modal_deck_builder_path(@deck),
        class: 'px-4 py-2 border border-highlight rounded-lg text-grey-text hover:bg-foreground hover:text-accent-50 hover:border-accent-50 transition cursor-pointer',
        data: { turbo_frame: 'deck_modal' } %>

    <%= link_to 'Exit Build Mode', deck_show_path(username: current_user.username, collection_id: @deck.id),
        class: 'px-4 py-2 border border-highlight rounded-lg text-grey-text hover:bg-foreground hover:text-accent-50 hover:border-accent-50 transition cursor-pointer',
        data: { turbo_frame: '_top' } %>
  <% else %>
    <%= link_to 'Back to Decks', decks_index_path(username: @deck.user.username),
        class: 'px-4 py-2 border border-highlight rounded-lg text-grey-text hover:bg-foreground hover:text-accent-50 hover:border-accent-50 transition cursor-pointer' %>
  <% end %>
</div>
