<%= turbo_frame_tag "deck_modal" do %>
  <dialog id="edit-staged-dialog"
          class="p-0 border rounded-lg bg-foreground border-highlight backdrop:bg-black/50 fixed top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 m-0"
          data-controller="modal"
          data-action="click->modal#closeOnBackdrop keydown.esc->modal#close">
    <div class="w-96 p-6" data-modal-target="content">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-grey-text">Edit Quantity</h3>
        <button type="button"
                data-action="click->modal#close"
                class="text-grey-text hover:text-nine-white cursor-pointer">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>

      <div class="mb-4">
        <div class="flex items-center gap-3 p-3 border rounded-lg border-highlight bg-background">
          <% if card.magic_card.image_small.present? %>
            <img src="<%= card.magic_card.image_small %>"
                 alt="<%= card.magic_card.name %>"
                 class="w-12 h-auto rounded" />
          <% end %>
          <div>
            <p class="font-medium text-grey-text"><%= card.magic_card.name %></p>
            <%
              current_parts = []
              current_parts << "#{card.staged_quantity} regular" if card.staged_quantity > 0
              current_parts << "#{card.staged_foil_quantity} foil" if card.staged_foil_quantity > 0
              current_parts << "#{card.staged_proxy_quantity} proxy" if card.staged_proxy_quantity > 0
              current_parts << "#{card.staged_proxy_foil_quantity} foil proxy" if card.staged_proxy_foil_quantity > 0
            %>
            <p class="text-sm text-grey-text/75">
              Currently: <%= current_parts.any? ? current_parts.join(', ') : 'none' %>
            </p>
            <% if card.source_collection.present? %>
              <p class="text-xs text-blue-400">from <%= card.source_collection.name %></p>
            <% end %>
          </div>
        </div>
      </div>

      <% if available_quantities.present? %>
        <div class="mb-4 p-2 rounded bg-highlight/50 text-xs text-grey-text">
          <%
            avail_parts = []
            avail_parts << "#{available_quantities[:regular]} regular" if available_quantities[:regular] > 0
            avail_parts << "#{available_quantities[:foil]} foil" if available_quantities[:foil] > 0
            avail_parts << "#{available_quantities[:proxy]} proxy" if available_quantities[:proxy] > 0
            avail_parts << "#{available_quantities[:proxy_foil]} foil proxy" if available_quantities[:proxy_foil] > 0
          %>
          Available: <%= avail_parts.any? ? avail_parts.join(', ') : 'none' %>
        </div>
      <% end %>

      <%= form_with url: update_staged_deck_builder_path(deck, card_id: card.id), method: :patch, class: "space-y-4" do |f| %>
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-grey-text mb-2">Regular</label>
            <input type="number"
                   name="staged_quantity"
                   value="<%= card.staged_quantity %>"
                   min="0"
                   max="<%= max_quantities[:regular] %>"
                   class="w-full rounded-md bg-background border-highlight text-grey-text focus:border-accent-50 focus:ring-accent-50 [appearance:textfield] [&::-webkit-outer-spin-button]:appearance-none [&::-webkit-inner-spin-button]:appearance-none" />
          </div>
          <div>
            <label class="block text-sm font-medium text-grey-text mb-2">Foil</label>
            <input type="number"
                   name="staged_foil_quantity"
                   value="<%= card.staged_foil_quantity %>"
                   min="0"
                   max="<%= max_quantities[:foil] %>"
                   class="w-full rounded-md bg-background border-highlight text-grey-text focus:border-accent-50 focus:ring-accent-50 [appearance:textfield] [&::-webkit-outer-spin-button]:appearance-none [&::-webkit-inner-spin-button]:appearance-none" />
          </div>
          <div>
            <label class="block text-sm font-medium text-grey-text mb-2">Proxy</label>
            <input type="number"
                   name="staged_proxy_quantity"
                   value="<%= card.staged_proxy_quantity %>"
                   min="0"
                   max="<%= max_quantities[:proxy] %>"
                   class="w-full rounded-md bg-background border-highlight text-grey-text focus:border-accent-50 focus:ring-accent-50 [appearance:textfield] [&::-webkit-outer-spin-button]:appearance-none [&::-webkit-inner-spin-button]:appearance-none" />
          </div>
          <div>
            <label class="block text-sm font-medium text-grey-text mb-2">Foil Proxy</label>
            <input type="number"
                   name="staged_proxy_foil_quantity"
                   value="<%= card.staged_proxy_foil_quantity %>"
                   min="0"
                   max="<%= max_quantities[:proxy_foil] %>"
                   class="w-full rounded-md bg-background border-highlight text-grey-text focus:border-accent-50 focus:ring-accent-50 [appearance:textfield] [&::-webkit-outer-spin-button]:appearance-none [&::-webkit-inner-spin-button]:appearance-none" />
          </div>
        </div>

        <p class="text-xs text-grey-text/75">
          Setting all to 0 will remove the card from the deck.
        </p>

        <div class="flex justify-end gap-3 pt-2">
          <button type="button"
                  data-action="click->modal#close"
                  class="px-4 py-2 text-sm transition border rounded-md border-highlight text-grey-text hover:bg-foreground hover:text-accent-50 hover:border-accent-50 cursor-pointer">
            Cancel
          </button>
          <%= f.submit "Update",
              class: "px-4 py-2 text-sm font-medium transition rounded-md bg-accent-50 text-foreground border border-accent-50 hover:bg-foreground hover:text-accent-50 hover:border-accent-50 cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </dialog>
<% end %>
