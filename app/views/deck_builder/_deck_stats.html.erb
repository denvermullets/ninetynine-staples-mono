<div class="flex flex-wrap items-center gap-4 text-sm">
  <div class="flex items-center gap-1.5">
    <span class="text-grey-text">Cards:</span>
    <span class="font-semibold text-white"><%= @stats[:total] %></span>
  </div>

  <div class="flex items-center gap-1.5">
    <span class="text-grey-text">Value:</span>

    <span class="font-semibold text-white">
      <%= number_to_currency(@stats[:real_value]) %>
    </span>

    <% if @stats[:proxy_value].to_f > 0 %>
      <span class="text-grey-text">//</span>
      <span class="font-semibold text-white">
        <%= number_to_currency(@stats[:proxy_value]) %>
      </span>
      <span
        class="
          px-1.5 py-0.5 text-xs font-bold rounded bg-accent-400/20
          text-accent-400 border border-accent-400/30
        "
        title="Proxy Value"
      >
        P
      </span>
    <% end %>
  </div>

  <% if @stats[:staged] > 0 %>
    <div class="flex items-center gap-1.5">
      <span class="w-2 h-2 rounded-full bg-blue-400"></span>
      <span class="text-blue-400">Staged:</span>
      <span class="font-semibold text-blue-400"><%= @stats[:staged] %></span>
    </div>
  <% end %>

  <% if @stats[:needed] > 0 %>
    <div class="flex items-center gap-1.5">
      <span class="w-2 h-2 rounded-full bg-orange-400"></span>
      <span class="text-orange-400">Need:</span>
      <span class="font-semibold text-orange-400"><%= @stats[:needed] %></span>
    </div>
  <% end %>

  <% if @stats[:owned] > 0 %>
    <div class="flex items-center gap-1.5">
      <span class="w-2 h-2 rounded-full bg-accent-50"></span>
      <span class="text-accent-50">Owned:</span>
      <span class="font-semibold text-accent-50"><%= @stats[:owned] %></span>
    </div>
  <% end %>
</div>
