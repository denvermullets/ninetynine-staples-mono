<div
  class="
    flex flex-col md:flex-row w-full gap-6 px-6 py-2 justify-center border
    rounded-xl border-highlight text-grey-text
  "
  data-controller="boxset-value-chart"
>
  <div class="w-full md:w-1/2">
    <h3 class="text-sm font-semibold mb-2">Normal Prices</h3>

    <canvas
      data-boxset-value-chart-target="normalChart"
      data-boxset-value-chart-normal="<%= history['normal'].to_json %>"
      class="w-full"
      style="max-height: 125px;"
    ></canvas>
  </div>

  <div class="w-full md:w-1/2">
    <h3 class="text-sm font-semibold mb-2">Foil Prices</h3>

    <canvas
      data-boxset-value-chart-target="foilChart"
      data-boxset-value-chart-foil="<%= history['foil'].to_json %>"
      class="w-full"
      style="max-height: 125px;"
    ></canvas>
  </div>
</div>
