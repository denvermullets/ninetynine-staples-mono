<%= turbo_frame_tag "card_details_#{card.id}" do %>
  <div class="flex flex-col p-2 md:gap-8 md:p-8 md:flex-row md:flex-wrap bg-menu">
    <div class="flex flex-col w-auto text-end md:hidden">
      <% if card.has_foil %>
        <p class="text-md text-greyText">(R) $<%= card.normal_price %> / (F) $<%= card.foil_price %></p>
      <% else %>
        <p class="text-md text-greyText">(R) $<%= card.normal_price %></p>
      <% end %>
    </div>
    <div class="flex flex-row justify-center order-1 w-auto my-4 md:flex-1 md:order-none md:my-0">
      <img src="<%= card.image_medium %>"
        class="object-cover w-auto md:w-full md:max-w-fit md:min-w-64 rounded-3xl"
        alt="<%= card.name %>"
      />
    </div>
    <div class="flex flex-col flex-1 order-3 w-auto md:order-none">
      <h3 class="mb-2 text-lg font-semibold text-nineWhite"><%= card.name %></h3>
      <p class="text-xs text-nineWhite"><%= card.text %></p>
    </div>
    <div class="flex flex-col flex-1 order-2 w-auto space-y-8 md:space-y-8 md:order-none">
      <% if current_user %>
        <%= render partial: 'collections/form', locals: { collections:, magic_card: card } %>
      <% end %>
      <%= render partial: 'magic_cards/price_history', locals: { history: card.price_history } %>
    </div>
  </div>
<% end %>