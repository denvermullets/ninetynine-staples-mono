<%= turbo_frame_tag "card_details_#{card.id}" do %>
  <div class="flex flex-row w-full p-8 space-x-4 bg-menu">
    <img src="<%= card.image_medium %>" class="rounded-2xl max-w-64">
    <div class='flex flex-col w-auto max-w-80'>
      <h3 class="mb-2 text-lg font-semibold text-nineWhite"><%= card.name %></h3>
      <p class="text-xs text-nineWhite"><%= card.text %></p>
    </div>
    <div class='flex flex-col'>
      <p class="mb-2"><strong>Type:</strong> <%= card.card_type %></p>
      <p class="mb-2"><strong>Mana Cost:</strong> <%= card.mana_cost %></p>
      <p class="mb-2"><strong>Rarity:</strong> <%= card.rarity %></p>
    </div>
  </div>
<% end %>