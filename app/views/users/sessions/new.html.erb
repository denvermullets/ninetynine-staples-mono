<div class='flex items-start justify-center w-full min-h-screen pt-[160px]'>
  <div class='w-full max-w-md p-6 border border-foreground bg-foreground rounded-xl text-grey-text'>
    <h1 class='mb-2 text-xl font-bold text-center'>Log in to your account</h1>
    <h1 class='mb-6 text-sm text-center '>Start making your dreams come true</h1>
    <%= form_with url: login_path, class: 'space-y-4', data: { turbo: false } do |form| %>
      <% if flash[:alert] || flash[:notice] %>
        <div class="p-4 mb-4 text-sm rounded-lg <%= flash[:alert] ? 'text-red-400 bg-red-900/50 border border-red-700' : 'text-green-400 bg-green-900/50 border border-green-700' %>">
          <%= flash[:alert] || flash[:notice] %>
        </div>
      <% end %>
      <div class='space-y-2'>
        <%= form.label :email %>
        <%= form.email_field :email, placeholder: 'your_email@email.com', autofocus: true, required: true, class: input_styles %>
      </div>
      <div class='space-y-2'>
        <%= form.label :password %>
        <%= form.password_field :password, placeholder: 'Password', required: true, class: input_styles %>
      </div>
      <div class='flex flex-col items-center w-full'>
        <%= form.submit 'Log in',
            class: 'w-full py-2 px-4 mt-2 bg-accent-50 text-background rounded-md cursor-pointer transition duration-300' %>
        <%= link_to 'Sign up', sign_up_path, class: 'mt-4' %>
        <%= link_to 'Forgot Password', new_password_reset_path, class: 'mt-4' %>
      </div>
    <% end %>
  </div>
</div>
