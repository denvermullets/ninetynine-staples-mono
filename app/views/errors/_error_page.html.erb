<div class="h-[calc(100vh-72px)] flex flex-col lg:flex-row">
  <!-- Left side - Error content -->
  <div class="flex-1 flex flex-col justify-center px-8 md:px-16 lg:px-24 py-16 lg:py-0">
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-accent-100 leading-tight mb-6">
      <%= error_title %>
    </h1>
    <p class="text-grey-text text-lg md:text-xl mb-8 max-w-md">
      <%= error_message %>
    </p>
    <div class="flex flex-col sm:flex-row gap-4">
      <a href="javascript:history.back()" class="inline-flex items-center justify-center px-6 py-3 border border-gray-600 hover:border-accent-50 text-grey-text hover:text-accent-50 font-medium rounded-lg transition-colors">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Go back
      </a>
      <a href="/" class="inline-flex items-center justify-center px-6 py-3 bg-accent-50 hover:bg-transparent border border-accent-50 hover:text-accent-50 text-foreground font-medium rounded-lg transition-colors">
        Take me home
      </a>
    </div>
  </div>

  <!-- Right side - Card image -->
  <div class="flex-1 bg-dark-200 relative overflow-hidden flex items-center justify-center">
    <% if salty_card&.image_large.present? %>
      <div class="relative h-full py-4">
        <img
          src="<%= salty_card.image_large %>"
          alt="<%= salty_card.name %>"
          class="h-full w-auto object-contain rounded-4xl"
        />
        <div class="absolute bottom-4 left-0 right-0 bg-gradient-to-t from-black/90 via-black/50 to-transparent rounded-b-4xl pt-16 pb-6 px-4">
          <p class="text-white text-xl font-semibold text-center"><%= salty_card.name %></p>
          <% if salty_card.edhrec_saltiness.present? %>
            <p class="text-accent-100 text-sm mt-1 text-center">Salt Score: <%= number_with_precision(salty_card.edhrec_saltiness, precision: 2) %></p>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="text-center p-8">
        <svg class="w-16 h-16 mx-auto text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        <p class="text-gray-500">Card image</p>
      </div>
    <% end %>
  </div>
</div>
