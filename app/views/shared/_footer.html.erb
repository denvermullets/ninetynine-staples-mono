<footer class="bg-foreground border-t border-menu">
  <% unless current_user %>
    <!-- CTA Section -->
    <div class="px-4 md:px-12 2xl:px-64 py-12 md:py-16">
      <div
        class="
          bg-menu rounded-2xl p-8 md:p-12 flex flex-col md:flex-row
          md:items-center md:justify-between gap-6
        "
      >
        <div>
          <h2 class="text-2xl md:text-3xl font-bold text-white mb-2">
            Start tracking your collection
          </h2>

          <p class="text-grey-text">
            Join other Magic players organizing their cards with 99 Staples.
          </p>
        </div>

        <div class="flex flex-col sm:flex-row gap-3">
          <%= link_to 'Learn more', features_path, class: 'inline-flex items-center justify-center px-5 py-2.5 border border-gray-600 hover:border-accent-50 text-grey-text hover:text-accent-50 font-medium rounded-lg transition-colors whitespace-nowrap' %>
          <%= link_to 'Get started', sign_up_path, class: 'inline-flex items-center justify-center px-5 py-2.5 bg-accent-50 hover:bg-transparent border border-accent-50 hover:text-accent-50 text-foreground font-medium rounded-lg transition-colors whitespace-nowrap' %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Main Footer -->
  <div class="px-4 md:px-12 2xl:px-64 py-12 border-t border-menu">
    <div class="grid grid-cols-2 md:grid-cols-6 gap-8">
      <!-- Brand Column -->
      <div class="col-span-2">
        <%= link_to root_path, class: 'inline-flex items-center gap-2 mb-4' do %>
          <img src="/icon.png" alt="99 Staples" class="w-8 h-8 rounded-lg">
          <span class="text-white font-semibold text-lg">99 Staples</span>
        <% end %>

        <p class="text-grey-text text-sm max-w-xs">
          Track your Magic: The Gathering collection, build decks, and never
          lose sight of your cards again.
        </p>
      </div>

      <!-- Browse Column -->
      <div>
        <h3 class="text-sm font-semibold text-grey-text uppercase tracking-wider mb-4">
          Browse
        </h3>

        <ul class="space-y-3">
          <li>
            <%= link_to 'Boxsets', boxsets_path, class: 'text-grey-text hover:text-white transition-colors' %>
          </li>

          <li>
            <%= link_to 'Precons', precon_decks_path, class: 'text-grey-text hover:text-white transition-colors' %>
          </li>

          <li>
            <%= link_to 'Commanders', commanders_path, class: 'text-grey-text hover:text-white transition-colors' %>
          </li>

          <li>
            <%= link_to 'Features', features_path, class: 'text-grey-text hover:text-white transition-colors' %>
          </li>
        </ul>
      </div>

      <!-- Collection Column -->
      <div>
        <h3 class="text-sm font-semibold text-grey-text uppercase tracking-wider mb-4">
          Collection
        </h3>

        <ul class="space-y-3">
          <% if current_user %>
            <li>
              <%= link_to 'Overview', collections_overview_path(current_user.username), class: 'text-grey-text hover:text-white transition-colors' %>
            </li>
            <li>
              <%= link_to 'All Cards', collection_show_path(current_user.username), class: 'text-grey-text hover:text-white transition-colors' %>
            </li>
            <li>
              <%= link_to 'Decks', decks_index_path(current_user.username), class: 'text-grey-text hover:text-white transition-colors' %>
            </li>
            <li>
              <%= link_to 'Scan Cards', card_scanner_path, class: 'text-grey-text hover:text-white transition-colors' %>
            </li>
          <% else %>
            <li>
              <%= link_to 'Sign up to start', sign_up_path, class: 'text-grey-text hover:text-white transition-colors' %>
            </li>
          <% end %>
        </ul>
      </div>

      <!-- Play Column -->
      <div>
        <h3 class="text-sm font-semibold text-grey-text uppercase tracking-wider mb-4">
          Play
        </h3>

        <ul class="space-y-3">
          <% if current_user %>
            <li>
              <%= link_to 'Game Tracker', game_tracker_path(current_user.username), class: 'text-grey-text hover:text-white transition-colors' %>
            </li>
          <% else %>
            <li>
              <%= link_to 'Game Tracker', sign_up_path, class: 'text-grey-text hover:text-white transition-colors' %>
            </li>
          <% end %>

          <li>
            <%= link_to 'Deck Builder', sign_up_path, class: 'text-grey-text hover:text-white transition-colors' %>
          </li>
        </ul>
      </div>

      <!-- Account Column -->
      <div>
        <h3 class="text-sm font-semibold text-grey-text uppercase tracking-wider mb-4">
          Account
        </h3>

        <ul class="space-y-3">
          <% if current_user %>
            <li>
              <%= link_to 'Settings', settings_path, class: 'text-grey-text hover:text-white transition-colors' %>
            </li>
            <li>
              <%= link_to 'Sign out', logout_path, data: { turbo_method: :delete }, class: 'text-grey-text hover:text-white transition-colors' %>
            </li>
          <% else %>
            <li>
              <%= link_to 'Log in', login_path, class: 'text-grey-text hover:text-white transition-colors' %>
            </li>
            <li>
              <%= link_to 'Sign up', sign_up_path, class: 'text-grey-text hover:text-white transition-colors' %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="px-4 md:px-12 2xl:px-64 py-6 border-t border-menu">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
      <p class="text-grey-text text-sm">
        &copy; <%= Date.current.year %> 99 Staples. All rights reserved.
      </p>

