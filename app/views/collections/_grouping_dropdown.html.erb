<div class="grouping-container <%= 'hidden' unless @view_mode == 'visual' %>">
  <div class="flex flex-col">
    <h3 class="mb-2 text-grey-text">Group By</h3>
    <select
      data-collection-view-target="groupingSelect"
      data-action="change->collection-view#changeGrouping"
      class="w-full px-3 py-2 border rounded-md bg-background border-highlight text-grey-text focus:border-accent-50 focus:ring-accent-50"
    >
      <option value="none" <%= 'selected' if @grouping == 'none' %>>None</option>
      <option value="rarity" <%= 'selected' if @grouping == 'rarity' %>>Rarity</option>
      <option value="color" <%= 'selected' if @grouping == 'color' %>>Color</option>
    </select>
    <p class="mt-2 text-xs text-grey-text">Group cards in visual view</p>
  </div>
</div>
