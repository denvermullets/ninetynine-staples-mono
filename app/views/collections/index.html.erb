<div class="flex gap-8 px-24 py-8">
  <!-- Sidebar -->
  <div class="flex-shrink-0 px-8 py-4 space-y-8 border w-72 h-96 rounded-3xl border-highlight bg-foreground text-greyText">
    <%= render partial: 'shared/cards/search', locals: { search_path: load_collection_path } %>
    <%= render partial: 'shared/cards/dropdown', locals: { options: @options.to_json, filter_path: load_collection_path } %>
  </div>
  <!-- Main Content -->
  <div class="flex flex-col flex-grow gap-8">
    <!-- Top Bar -->
    <div class="flex-shrink-0 px-8 py-4 border rounded-3xl bg-foreground border-highlight text-greyText">
      Top Bar
    </div>
    <!-- Table Content -->
    <div class="flex-grow">
      <%= turbo_frame_tag 'boxset_content' do %>
        <div id="table-container" class="min-w-full">
          <%= render partial: 'table' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
