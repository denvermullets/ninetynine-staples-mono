<div class="flex flex-col flex-auto h-auto px-4 space-y-8 md:px-12 2xl:px-48 bg-dark-100">
  <%= render partial: 'shared/page_header',
    locals: { header: "#{@user.username}'s Decks",
              subtext: @is_owner ? 'Manage your decks. Click on a deck to enter build mode.' : "Browse #{@user.username}'s deck collection." }
  %>

  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
    <% if @is_owner %>
      <%= link_to new_collection_path(collection_type: 'commander_deck'),
          class: 'px-4 py-2 bg-accent-50 text-background rounded-lg border border-accent-50 hover:bg-foreground hover:text-accent-50 transition cursor-pointer' do %>
        + New Deck
      <% end %>
    <% else %>
      <div></div>
    <% end %>
    <div class="flex items-center gap-2">
      <label for="sort" class="text-grey-text text-sm">Sort by:</label>
      <%= select_tag :sort,
          options_for_select(@sort_options.map { |k, v| [v[:label], k] }, @sort),
          class: 'border text-grey-text text-sm rounded-lg bg-background border-highlight focus:border-accent-50 focus:ring-accent-50 px-3 py-2 cursor-pointer',
          onchange: "window.location.href = '#{decks_index_path(@user.username)}?sort=' + this.value" %>
    </div>
  </div>

  <% if @decks.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      <% @decks.each do |deck| %>
        <%= render partial: 'shared/collection_card', locals: {
          collection: deck,
          link_path: deck_builder_path(deck),
          is_owner: @is_owner,
          edit_url: edit_deck_modal_deck_builder_path(deck),
          frame_id: 'deck_modal',
          show_proxy_value: true
        } %>
      <% end %>
    </div>
  <% else %>
    <div class="border rounded-3xl bg-foreground border-highlight p-12 text-center">
      <p class="text-lg text-grey-text mb-4">
        <% if @is_owner %>
          You don't have any decks yet.
        <% else %>
          <%= @user.username %> doesn't have any decks yet.
        <% end %>
      </p>
      <% if @is_owner %>
        <%= link_to 'Create Your First Deck', new_collection_path(collection_type: 'deck'),
            class: 'inline-block px-6 py-3 bg-accent-50 text-background rounded-lg border border-accent-50 hover:bg-foreground hover:text-accent-50 transition cursor-pointer' %>
      <% end %>
    </div>
  <% end %>

  <%= turbo_frame_tag "deck_modal" %>
</div>
